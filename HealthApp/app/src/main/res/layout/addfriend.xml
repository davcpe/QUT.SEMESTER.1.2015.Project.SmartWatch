<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MobileActivity"
    android:background="@drawable/white_three">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friend"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#ff6c78ff"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/img3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffd0dbff"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="@dimen/img3"
            android:layout_height="@dimen/img3"
            android:id="@+id/imageCategory"
            android:layout_weight="1"
            android:src="@drawable/category_icon"
            android:background="#ffcaffaa"
            android:onClick="CategoryPage"/>
        <ImageView
            android:layout_width="@dimen/img3"
            android:layout_height="@dimen/img3"
            android:id="@+id/imageAddFriend"
            android:layout_weight="1"
            android:src="@drawable/addfriend_icon"
            android:onClick="AddfriendPage"/>
        <ImageView
            android:layout_width="@dimen/img3"
            android:layout_height="@dimen/img3"
            android:id="@+id/imageRanking"
            android:layout_weight="1"
            android:src="@drawable/rankings_icon"
            android:background="#ffcaffaa"
            android:onClick="rankPage"/>
        <ImageView
            android:layout_width="@dimen/img3"
            android:layout_height="@dimen/img3"
            android:id="@+id/imageNotification"
            android:layout_weight="1"
            android:src="@drawable/notification_icon"
            android:onClick="invitationPage"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/img4"
        android:layout_height="@dimen/img4"
        android:id="@+id/imageView3"
        android:src="@drawable/home_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
