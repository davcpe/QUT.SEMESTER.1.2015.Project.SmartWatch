<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.davcpe.healthprototypeapp.FirstPage"
    android:background="@drawable/white_three">

    <Button
        android:layout_width="@dimen/img200dp"
        android:layout_height="@dimen/img150dp"
        android:text="Activity"
        android:id="@+id/buttonAct"
        android:background="#ffffe821"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/buttonFriend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/img120dp"
        android:layout_height="@dimen/img240dp"
        android:text="Rank"
        android:id="@+id/buttonRank"
        android:background="#ffffb829"
        android:textSize="25dp"
        android:textColor="#ffff4017"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/buttonAct"
        android:layout_alignRight="@+id/imageNotification"
        android:layout_alignEnd="@+id/imageNotification" />

    <Button
        android:layout_width="@dimen/img200dp"
        android:layout_height="@dimen/img70dp"
        android:text="Friend "
        android:id="@+id/buttonFriend"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:background="#ffd9ff51"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/img270dp"
        android:layout_height="@dimen/img80dp"
        android:text="My Challenge History"
        android:id="@+id/buttonChallenge"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:background="#ffff8736"
        android:layout_below="@+id/buttonFriend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <ImageView
        android:layout_width="@dimen/img50dp"
        android:layout_height="@dimen/img40dp"
        android:id="@+id/imageNotification"
        android:layout_alignTop="@+id/buttonChallenge"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/notification_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Challenge"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:textColor="#ff3d8cff" />

</RelativeLayout>
