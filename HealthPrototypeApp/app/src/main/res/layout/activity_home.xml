<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.davcpe.healthprototypeapp.HomeActivity"
    android:background="@drawable/white_three"
    android:gravity="center_vertical">

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerACT"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_gravity="left"
        android:layout_toLeftOf="@+id/imageStartbtn"
        android:layout_toStartOf="@+id/imageStartbtn" />

    <ImageView
        android:layout_width="@dimen/img130dp"
        android:layout_height="@dimen/img130dp"
        android:id="@+id/imageStartbtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/start_button2" />

    <ImageView
        android:layout_width="@dimen/img40dp"
        android:layout_height="@dimen/img40dp"
        android:id="@+id/imageView2"
        android:src="@drawable/cycling_icon"
        android:layout_alignTop="@+id/spinnerACT"
        android:layout_toRightOf="@+id/spinnerACT"
        android:layout_toEndOf="@+id/spinnerACT" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="#d7030404"
        android:textSize="70dp"
        android:layout_gravity="right"
        android:layout_above="@+id/imageStartbtn"
        android:layout_alignLeft="@+id/imageStartbtn"
        android:layout_alignStart="@+id/imageStartbtn"
        android:layout_marginBottom="26dp"
        android:background="#ffc5fffa" />

</RelativeLayout>
