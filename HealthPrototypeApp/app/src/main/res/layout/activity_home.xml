<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.davcpe.healthprototypeapp.HomeActivity"
    android:background="@drawable/white_three"
    android:gravity="center_vertical"><![CDATA[

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    ]]>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerACT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_gravity="left"
        android:layout_toLeftOf="@+id/imageStartbtn"
        android:layout_toStartOf="@+id/imageStartbtn"
        android:background="#ff70e3ff" />

    <ImageView
        android:layout_width="@dimen/img40dp"
        android:layout_height="@dimen/img40dp"
        android:id="@+id/imageACT"
        android:src="@drawable/cycling_icon"
        android:layout_alignTop="@+id/spinnerACT"
        android:layout_toRightOf="@+id/spinnerACT"
        android:layout_toEndOf="@+id/spinnerACT" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textColor="#d7030404"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/imageACT"
        android:layout_toRightOf="@+id/imageScale"
        android:layout_toEndOf="@+id/imageScale" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerScale"
        android:layout_gravity="left"
        android:background="#ffb3ffee"
        android:layout_below="@+id/spinnerACT"
        android:layout_alignRight="@+id/imageACT"
        android:layout_alignEnd="@+id/imageACT"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="@dimen/img40dp"
        android:layout_height="@dimen/img40dp"
        android:id="@+id/imageScale"
        android:layout_alignTop="@+id/spinnerScale"
        android:layout_toRightOf="@+id/spinnerScale"
        android:layout_toEndOf="@+id/spinnerScale"
        android:src="@drawable/kcal_icon" />

    <ImageView
        android:layout_width="@dimen/img30dp"
        android:layout_height="@dimen/img40dp"
        android:id="@+id/imageBack"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/home_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textScale"
        android:layout_alignBottom="@+id/imageScale"
        android:layout_alignLeft="@+id/textTimer"
        android:layout_alignStart="@+id/textTimer"
        android:textSize="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editDesc"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/imageStartbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Description :" />

    <ImageView
        android:layout_width="@dimen/img120dp"
        android:layout_height="@dimen/img120dp"
        android:id="@+id/imageStartbtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/start_button2"
        android:layout_gravity="right|left"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
