<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MobileActivity"
    android:background="@drawable/white_three">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Challenges Act"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#ff6c78ff"
        android:textStyle="bold"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/img4"
        android:layout_height="@dimen/img4"
        android:id="@+id/imageView3"
        android:src="@drawable/home_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="homePage"
        />

    <ImageView
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/img3"
        android:id="@+id/imageView5"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_act"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/img3"
        android:id="@+id/imageView6"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_food"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/img3"
        android:id="@+id/imageView7"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_sleep" />

</RelativeLayout>
